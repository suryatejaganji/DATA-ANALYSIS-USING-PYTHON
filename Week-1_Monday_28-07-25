    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "pass_threshold = int(input(\"Enter Pass Threshold (default = 50): \") or 50)\n",
        "borderline_threshold = int(input(\"Enter Borderline Lower Limit (default = 40): \") or 40)\n",
        "\n",
        "\n",
        "marks = [35, 48, 52, 67, 29, 45, 88, 73, 41, 56]\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "def classify_dynamic(score):\n",
        "    if score < borderline_threshold:\n",
        "        return \"Fail\"\n",
        "    elif borderline_threshold <= score < pass_threshold:\n",
        "        return \"Borderline\"\n",
        "    else:\n",
        "        return \"Pass\"\n",
        "\n",
        "\n",
        "categories = [classify_dynamic(m) for m in marks]\n",
        "\n",
        "\n",
        "df = pd.DataFrame({\n",
        "    \"Marks\": marks,\n",
        "    \"Category\": categories\n",
        "})\n",
        "\n",
        "\n",
        "df[\"Category\"] = pd.Categorical(\n",
        "    df[\"Category\"],\n",
        "    categories=[\"Fail\", \"Borderline\", \"Pass\"],\n",
        "    ordered=True\n",
        ")\n",
        "\n",
        "print(\"\\n=== STUDENT PERFORMANCE REPORT ===\\n\")\n",
        "print(df)\n",
        "print(\"\\nCategory Frequency:\\n\", df[\"Category\"].value_counts())\n",
        "print(\"\\nPercentage Distribution (%):\\n\", (df[\"Category\"].value_counts(normalize=True) * 100).round(2))\n",
        "\n",
        "\n",
        "\n",
        "\n",
        "plt.figure(figsize=(7,5))\n",
        "df[\"Category\"].value_counts().plot(kind='bar')\n",
        "\n",
        "plt.title(\"Distribution of Students Across Categories (Dynamic Thresholds)\")\n",
        "plt.xlabel(\"Category\")\n",
        "plt.ylabel(\"Number of Students\")\n",
        "plt.grid(axis='y', linestyle='--')\n",
        "\n",
        "plt.show()"
      ],
