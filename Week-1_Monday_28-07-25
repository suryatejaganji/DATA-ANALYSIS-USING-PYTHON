      "source": [
        "import pandas as pd\n",
        "\n",
        "\n",
        "\n",
        "marks = [35, 48, 52, 67, 29, 45, 88, 73, 41, 56]\n",
        "\n",
        "\n",
        "def classify_score(score):\n",
        "    if score < 40:\n",
        "        return \"Fail\"\n",
        "    elif 40 <= score <= 49:\n",
        "        return \"Borderline\"\n",
        "    else:\n",
        "        return \"Pass\"\n",
        "\n",
        "\n",
        "categories = [classify_score(m) for m in marks]\n",
        "\n",
        "\n",
        "df = pd.DataFrame({\n",
        "    \"Marks\": marks,\n",
        "    \"Category\": categories\n",
        "})\n",
        "\n",
        "df[\"Category\"] = pd.Categorical(\n",
        "    df[\"Category\"],\n",
        "    categories=[\"Fail\", \"Borderline\", \"Pass\"],\n",
        "    ordered=True\n",
        ")\n",
        "\n",
        "\n",
        "print(df)"
      ]
